<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellow"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:layout_gravity="center_vertical"
            android:paddingStart="16dp" />
    </LinearLayout>
    <!-- Location Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location details:"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orange"
            android:hint="the location where the incident took place"
            android:background="@drawable/round_edittext"
            android:padding="8dp"
            android:textColor="@color/orange" />
    </LinearLayout>

    <!-- Issue Faced Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue faced:"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <GridLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:columnCount="1"
            android:rowCount="4">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catcalling"
                android:textColor="@color/orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexual Comments"
                android:textColor="@color/orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Threats"
                android:textColor="@color/orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assault"
                android:textColor="@color/orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stalking"
                android:textColor="@color/orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unwanted Touching"
                android:textColor="@color/orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flashing/Indecent Exposure"
                android:textColor="@color/orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexual Gestures"
                android:textColor="@color/orange" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="@color/orange" />
        </GridLayout>
    </LinearLayout>

    <!-- Description Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/orange"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/round_edittext"
            android:hint="Briefly describe the incident that took place..."
            android:padding="8dp"
            android:textColor="@color/orange"
            android:textColorHint="@color/orange" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/round_button"
        android:textColor="@color/orange"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

